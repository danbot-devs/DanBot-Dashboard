<%- include('blocks/header', {bot, user, path}) %>
  <div class="container">
      <div class="container">
        <div class="row justify-content-md-center">
          <div class="col col-10"><h3>Live Bot Statistics.</h3>
          </div>
        </div>
        <div class="row justify-content-md-center">
          <div class="col-5 text-nowrap"><i class="fa fa-fw fa-server" aria-hidden="true"></i> Servers:</div>
          <div class="col-5 text-nowrap"><strong><%= stats.servers.toLocaleString() %></strong></div>
        </div>
        <div class="row justify-content-md-center">
          <div class="col-5 text-nowrap"><i class="fa fa-fw fa-clock-o" aria-hidden="true"></i> Uptime:</div>
          <div class="col-5 text-nowrap"><strong><%= stats.uptime %></strong></div>
        </div>
        <div class="row justify-content-md-center">
          <div class="col-5 text-nowrap"><i class="fa fa-fw fa-users" aria-hidden="true"></i> Members:</div>
          <div class="col-5 text-nowrap"><strong><%= stats.members.toLocaleString() %></strong></div>
        </div>
        <div class="row justify-content-md-center">
          <div class="col-5 text-nowrap"><i class="fa fa-fw fa-tasks" aria-hidden="true"></i> Memory:</div>
          <div class="col-5 text-nowrap"><strong><%= stats.memoryUsage %> MB</strong></div>
        </div>
        <div class="row justify-content-md-center">
          <div class="col-5 text-nowrap"><i class="fa fa-fw fa-hashtag" aria-hidden="true"></i> Text Channels:</div>
          <div class="col-5 text-nowrap"><strong><%= stats.text.toLocaleString() %></strong></div>
        </div>
        <div class="row justify-content-md-center">
          <div class="col-5 text-nowrap"><i class="fa fa-fw fa-microphone" aria-hidden="true"></i> Voice Channels:</div>
          <div class="col-5 text-nowrap"><strong><%= stats.voice.toLocaleString() %></strong></div>
        </div>
        <div class="row justify-content-md-center">
          <div class="col-5 text-nowrap"><i class="fa fa-fw fa-cog fa-spin" aria-hidden="true"></i> Discord.js Version:</div>
          <div class="col-5 text-nowrap"><strong><%= stats.dVersion %></strong></div>
        </div>
        <div class="row justify-content-md-center">
          <div class="col-5 text-nowrap"><i class="fa fa-fw fa-cog" aria-hidden="true"></i> Node.js Version:</div>
          <div class="col-5 text-nowrap"><strong><%= stats.nVersion %></strong></div>
        </div>
        <div class="row justify-content-md-center">
          <div class="col-5 text-nowrap"><i class="fa fa-signal" aria-hidden="true"></i> Ping:</div>
          <div class="col-5 text-nowrap"><strong><%= stats.ping %>ms</strong></div>
          <div class="col col-10"><h3>Live System Statistics.</h3>
          </div>
        </div>
        <div class="row justify-content-md-center">
          <div class="col-5 text-nowrap"><i class="fa fa-fw fa-tasks" aria-hidden="true"></i> CPU Usage:</div>
          <div class="col-5 text-nowrap"><strong><%= stats.cpuusagenew %></strong></div>
        </div>
        <div class="row justify-content-md-center">
          <div class="col-5 text-nowrap"><i class="fa fa-fw fa-tasks" aria-hidden="true"></i> CPU Temp:</div>
          <div class="col-5 text-nowrap"><strong><%= stats.cputemp %>Â°C</strong></div>
        </div>
        <div class="row justify-content-md-center">
          <div class="col-5 text-nowrap"><i class="fa fa-fw fa-tasks" aria-hidden="true"></i> Memory (Used/Total):</div>
          <div class="col-5 text-nowrap"><strong><%= stats.memoryused %>MB / <%= stats.memorytotal %>GB - Percent: <%= stats.mempercent %></strong></div>
        </div>
        <div class="row justify-content-md-center">
          <div class="col-5 text-nowrap"><i class="fa fa-fw fa-floppy-o" aria-hidden="true"></i> OS Boot Drive (Used/Total):</div>
          <div class="col-5 text-nowrap"><strong><%= stats.OSdisktotal - stats.OSdiskfree %>GB / <%= stats.OSdisktotal %>GB</strong></div>
        </div>
        <div class="row justify-content-md-center">
          <div class="col-5 text-nowrap"><i class="fa fa-download" aria-hidden="true"></i> Network Downloaded:</div>
          <div class="col-5 text-nowrap"><strong><%= stats.netdown %>GB</strong></div>
        </div>
        <div class="row justify-content-md-center">
          <div class="col-5 text-nowrap"><i class="fa fa-upload" aria-hidden="true"></i> Network Sent:</div>
          <div class="col-5 text-nowrap"><strong><%= stats.netsent %>GB</strong></div>
        </div>
        <div class="row justify-content-md-center">
          <div class="col-5 text-nowrap"><i class="fa fa-fw fa-clock-o" aria-hidden="true"></i> OS Uptime:</div>
          <div class="col-5 text-nowrap"><strong><%= stats.osuptime %></strong></div>
        </div>
        <div class="row justify-content-md-center">
          <div class="col-5 text-nowrap"><i class="fa fa-fw fa-clock-o" aria-hidden="true"></i> Last Boot:</div>
          <div class="col-5 text-nowrap"><strong><%= stats.lastboot %></strong></div>
        </div>
    </div>
    <% include ./blocks/footer %>